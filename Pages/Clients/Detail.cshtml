@page
@model ProjectManager.Pages.Clients.Detail

@{
    ViewData["Title"] = "Client Detail";
}

<div class="mt-5">
    @if (Model.Client is null)
    {
        <div class="alert alert-warning" role="alert">Client not found</div>
    }
    else
    {
        <div>
            <h3>@Model.Client.Name</h3>
            <p>@Model.Client.Email</p>
            <p>@Model.Client.Phone</p>
        </div>
    }
</div>
